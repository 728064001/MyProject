				
function ajaxreturn(rulstr,objvalue,callbackmethod){
			sendRequest(rulstr,objvalue,callbackmethod)
			var xmlhttprequest;
			function createXmlHttpRequest(){
				if(window.navigator.appName == "Microsoft Internet Explorer"){
					xmlhttprequest = new ActiveXObject("Microsoft.XMLHTTP");
				}else{
					xmlhttprequest = new XMLHttpRequest();
				}
			}
			
			function sendRequest(rulstr,objvalue,callbackmethod){
//				alert(rulstr+"  "+objvalue);
				createXmlHttpRequest();
				xmlhttprequest.open("POST",rulstr,true);
				xmlhttprequest.onreadystatechange = callbackmethod;
				xmlhttprequest.setRequestHeader("Content-Type","application/x-www-form-rulencoded;");
				xmlhttprequest.send(objvalue);
			}

	
			
		
}	
