package com.haolei.servlet;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import com.haolei.dao.Dbconn;
import com.haolei.entity.Company;

public class ReturnCompanyJsonDataServlet extends HttpServlet {
	Company company = null;
	JSONObject companyjson = new JSONObject();

	protected void service(HttpServletRequest arg0, HttpServletResponse arg1)
			throws ServletException, IOException {
		
		Connection conn = Dbconn.getconn();
		PreparedStatement pstm = null;
		ResultSet res = null;
		//query company name
		String companyQueryStr = "select companyname from company_tab";
		try{
			pstm = conn.prepareStatement(companyQueryStr);
			res = pstm.executeQuery();
			while(res.next()){
				//test
				System.out.println(res.getString(1));
				company.setCompanyName(res.getString(1));
			}
		}catch(Exception e){
			e.printStackTrace();
		}finally{
			Dbconn.closeALL(conn, pstm, res);
		}
	}
}
