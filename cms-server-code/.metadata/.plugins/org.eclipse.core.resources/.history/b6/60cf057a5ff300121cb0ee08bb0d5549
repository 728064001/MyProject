package com.haolei.servlet;

import java.io.IOException;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONArray;
import net.sf.json.JSONObject;

import com.haolei.dao.Dbconn;
import com.haolei.entity.Company;

public class ReturnCompanyJsonDataServlet extends HttpServlet {
	JSONObject companyjson = new JSONObject();
	JSONArray jsa = new JSONArray();
	JSONObject jso = new JSONObject();
	Company company = null;
	protected void service(HttpServletRequest req, HttpServletResponse resp)
			throws ServletException, IOException {
		
		Connection conn = Dbconn.getconn();
		PreparedStatement pstm = null;
		ResultSet res = null;
		//query company name
		String companyQueryStr = "select companyname from company_tab";
		try{
			pstm = conn.prepareStatement(companyQueryStr);
			res = pstm.executeQuery();
			while(res.next()){
				//test
//				System.out.println(res.getString(1));
				company = new Company();
				company.setCompanyName(res.getString(1));
//				System.out.println(company.getCompanyName());
				jso.put("companyname", res.getString(1));
				jsa.add(jso);
			}
			companyjson.put("company", jsa);
			
			System.out.println(companyjson);
			
			
		}catch(Exception e){
			e.printStackTrace();
		}finally{
			Dbconn.closeALL(conn, pstm, res);
		}
	}
}
